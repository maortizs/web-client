{% extends 'base.html.twig' %}

{% block title %}Crear Producto{% endblock %}

{% block body %}
 <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4 border p-5 bg-light rounded-4" >
  <h2>Nuevo Producto</h2>

  <form method="post">

    <div class="mb-3">
    <label for="name" class="form-label">Nombre:</label>
      <input class="form-control" id="name" type="text" name="name" required>
    </div>
    <div class="mb-3">
    <label for="stock" class="form-label">Stock:</label>
      <input class="form-control" min="0" id="stock" type="number" name="stock" required>
    </div>
    <div class="mb-3">
    <label for="price" class="form-label">Precio (â‚¬):</label>
      <input class="form-control" id="price" min="0.01" type="number" step="0.01" name="price" required>
    </div>
    <div class="row">
    <div class="col">
    <button class="btn btn-primary w-100" type="submit">Crear</button>
    </div>
    <div class="col">
    <a class="btn btn-secondary w-100" href="{{ path('product_list') }}">Cancelar</a>
      </div>
    </div>
  </form>
          </div>
    </div>
  </div>
{% endblock %}
